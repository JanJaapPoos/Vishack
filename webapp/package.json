{
  "name": "webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-eslint": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "bootstrap": "^4.0.0",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "firebase": "^4.11.0",
    "leaflet": "^1.3.1",
    "lodash": "^4.17.5",
    "node-sass-chokidar": "^1.0.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-leaflet": "^1.8.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "react-select": "^1.2.1",
    "stylelint": "^9.1.1",
    "stylelint-config-recommended-scss": "^3.1.0",
    "stylelint-config-standard": "^18.1.0",
    "stylelint-scss": "^2.5.0"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "flow": "flow",
    "build-css": "node-sass-chokidar src/styles/index.scss -o src/styles/",
    "watch-css": "npm run build-css && node-sass-chokidar src/styles/index.scss -o src/styles/ --watch",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "stylelint": "stylelint src/styles/**/*.scss",
    "eject": "react-scripts eject"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss"
    ],
    "rules": {
      "number-leading-zero": null
    }
  },
  "eslintConfig": {
    "plugins": [
      "flowtype",
      "react",
      "prettier",
      "standard"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:flowtype/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "prettier/standard"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "all"
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
